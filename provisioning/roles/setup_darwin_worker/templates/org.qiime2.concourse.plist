<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>org.qiime2.concourse</string>

        <key>Program</key>
        <string>{{ base_dir }}/run_worker.sh</string>

        <key>RunAtLoad</key>
        <true/>

        <key>KeepAlive</key>
        <true/>

        <key>StandardOutPath</key>
        <string>{{ base_dir }}/{{ log_dir }}/concourse.stdout</string>

        <key>StandardErrorPath</key>
        <string>{{ base_dir }}/{{ log_dir }}/concourse.stderr</string>
    </dict>
</plist>
